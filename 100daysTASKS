TASK-9:
def highest_bid(dict):
    high=0
    n=""
    for i in dict:
        h=dict[i]
        if high<h:
            high=h
            n=i
    print(f"the winner is {n} with a bid of ${high}")


logo=
dict={}
going='yes'
while going!='no':
    name=input("enter your name")
    bid=int(input("enter your bid $"))
    dict[name]=bid
    going=input("are there any other bidders ? type 'yes' or 'no'").lower()
    if going=='no':
        highest_bid(dict)
    if going=='yes':
        print('\n'*100)

