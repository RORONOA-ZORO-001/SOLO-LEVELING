for i in range(len(c)):
    var1+='-'
print(var1)


game_over=False
list1=[]
while not game_over:
    print(f"**************************************{lives}/6**************************************")
    b=input("enter a value:").lower()
    if b in list1:
        print("you already guessed")
    var2=""
    for i in c:
        if i==b:
            var2+=i
            list1.append(b)
        elif i in list1:
            var2+=i
        else:
            var2+='-'
    print(var2)
    if b not in c:
        lives-=1
        if lives==0:
            game_over=True
            print(f"**********************IT WAS {c}! YOU lOSE***********************************")
    if "-" not in var2:
        game_over=True
        print("you won")
    print(hm[lives])
